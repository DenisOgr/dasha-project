extends layouts/default
include helpers/mixins
include ../blocks/modules/header/header
include ../blocks/modules/footer/footer

block variables
  - const title = "Essaysampler | Contact Us"
block styles
  link(rel="stylesheet" href="styles/contacts.css")
block content
  +header
  section.section.section--intro
    .container
      h1.page-title.title Contact Us
      p.page-subtitle.body-text
        | Please, leave your message here and we will write you back!
      form.form
        label.form__field.body-text
          | Your message
          textarea.form__textarea(required)
        label.form__field.body-text
          | Your email
          input.form__input(type="text" required)
        button.form__submit(type="submit") send
      .decoration
        img.decoration__image(src="img/contact-us-decoration.png" alt="page decoration picture")
      .thank-you-modal
        .thank-you-modal__underlay
        .thank-you-modal__inner
          h2.tahnk-you-modal__title Thank you!
          p.thank-you-modal__body Lorem ipsum
  +footer

block scripts
  script.
    const modalOuter = document.querySelector(".thank-you-modal__underlay");

    modalOuter.addEventListener("click", function(e) {
      document.querySelector(".thank-you-modal").classList.remove("is-active");
    })